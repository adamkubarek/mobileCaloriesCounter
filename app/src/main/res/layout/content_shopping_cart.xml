<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.akubarek.fitcare.ui.shoppingCart.ShoppingCartActivity"
    tools:showIn="@layout/activity_shopping_cart">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tr_detail_list_view"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout"
        android:layout_height="3dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"></LinearLayout>

    <Button
        android:text="@string/button_make_tansaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_make_tansaction"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        android:textAlignment="center" />

    <Button
        android:text="@string/button_clear_shoppingCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clear_shopping_cart"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_make_tansaction"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="12sp" />

    <TextView
        android:text="@string/text_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_text_calories"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="@string/product_list_row_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_text_protein"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_text_calories"
        android:textSize="18sp"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/product_list_row_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_text_fat"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_text_protein"
        android:textSize="18sp"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/product_list_row_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_text_carbs"
        android:layout_marginStart="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_text_fat"
        android:textSize="18sp"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/default_calories_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_value_calories"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/shopping_text_calories"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="@string/default_numeric_grams_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_value_protein"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/shopping_text_protein"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_value_calories"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/default_numeric_grams_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_value_fat"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/shopping_text_fat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_value_protein"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/default_numeric_grams_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopping_value_carbs"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/shopping_text_carbs"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shopping_value_fat"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:text="@string/empty_shopping_cart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empty_shopping_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tr_detail_list_view"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="32dp"
        android:textStyle="normal|italic"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <ListView
        android:layout_width="365dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tr_detail_list_view"
        android:layout_height="290dp" />
</android.support.constraint.ConstraintLayout>
