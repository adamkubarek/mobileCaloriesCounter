<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_transaction_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.akubarek.fitcare.ui.transactionList.TransactionListActivity"
    tools:showIn="@layout/activity_transaction_list">

    <TextView
        android:text="@string/transaction_list_empty_text"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_empty_text"
        app:layout_constraintTop_toTopOf="@+id/transaction_list"
        app:layout_constraintBottom_toBottomOf="@+id/transaction_list"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/transaction_list"
        android:textStyle="normal|italic"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:id="@+id/transaction_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>
